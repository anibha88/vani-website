<h1 align="center"> Enquiry / Contact </h1>
<hr />

<% if @contact.errors.any? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= pluralize(@contact.errors.count, 'error') %>
            prohibited this <%= @contact.class %> from being saved:
          </h2>
          <div class="panel-body">
            <ul>
              <% @contact.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


<div class="row">
  <div class="col-md-12">

    <%= form_for(@contact, :url => thanks_path,:html => {class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Please enter in your name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :telephone %>
        </div>
        <div class="col-md-8">
          <%= f.telephone_field :telephone, class: "form-control", placeholder: "Please enter in your phone number" %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Please enter in your email where we can contact" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :message %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :message, as: :text, rows: 10, class: "form-control", placeholder: "Please describe your query" %>
        </div>
      </div>

      <div class="hidden">
        <%= f.label :nickname %><br>
        <%= f.text_field :nickname, hint: 'leave this field blank' %>
      </div>



      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit 'Submit Query!', class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
        <div class="col-md-4 col-md-offset-6 colormatch"> [<%= link_to 'Cancel and go back to home page', root_path %>] </div>
      </div>

    <% end %>

    
  </div>
</div>

